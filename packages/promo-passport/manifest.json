{
  "manifest_version": 3,
  "name": "nextblock: billboard",
  "short_name": "nextblock",
  "version": "1.0",
  "description": "Participate in the attn marketplace while you browse the web",
  "permissions": ["windows", "storage", "activeTab", "tabs", "notifications"],
  "action": {
    "default_popup": "dist/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "host_permissions": ["wss://t-relay.nextblock.app/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
