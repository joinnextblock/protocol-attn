{
  "name": "@promo-protocol/passport",
  "description": "Chrome extension for The PROMO Protocol",
  "module": "src/index.ts",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "dvmcp",
    "promo-protocol",
    "promo",
    "protocol",
    "passport"
  ],
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./*": "./*.ts",
    "./*/*": "./*/*.ts"
  },
  "files": [
    "**/*.ts",
    "**/*.js",
    "!**/*.test.ts",
    "!**/*.test.js",
    "config.example.yml"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "watch": "tsc -b --watch & vite build --watch"
  },
  "dependencies": {
    "@types/chrome": "^0.0.309",
    "applesauce-accounts": "^0.12.0",
    "applesauce-core": "^0.12.0",
    "applesauce-factory": "^0.12.0",
    "applesauce-loaders": "^0.12.0",
    "applesauce-signers": "^0.12.0",
    "nostr-tools": "^2.11.0",
    "rx-nostr": "^3.5.0",
    "solid-js": "^1.9.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vite-plugin-solid": "^2.11.2"
  }
}
