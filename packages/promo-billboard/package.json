{
  "name": "@promo-protocol/billboard",
  "description": "Billboard service for The PROMO Protocol",
  "module": "src/index.ts",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "dvmcp",
    "promo-protocol",
    "promo",
    "protocol",
    "billboard"
  ],
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./*": "./*.ts",
    "./*/*": "./*/*.ts"
  },
  "files": [
    "**/*.ts",
    "**/*.js",
    "!**/*.test.ts",
    "!**/*.test.js",
    "config.example.yml"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joinnextblock/promo-protocol.git"
  },
  "scripts": {
    "init": "cp config.example.yml config.billboard.yml",
    "start": "bun run ./src/index.ts",
    "dev": "bun run --watch ./src/index.ts",
    "test": "bun test",
    "build": "bun build ./src/index.ts --outfile ./build/index.js",
    "compile": "bun build ./src/index.ts --compile --outfile ./bin/billboard"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@dvmcp/commons": "^0.1.10",
    "@dvmcp/discovery": "^0.1.28",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@promo-protocol/commons": "^0.0.2",
    "cron": "^4.3.0",
    "js-yaml": "^4.1.0",
    "nostr-tools": "^2.12.0",
    "pino": "^9.6.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  }
}
