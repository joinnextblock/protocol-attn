{
  "name": "@attn/framework",
  "version": "0.9.5",
  "description": "Hook-based framework for building attention marketplace implementations using ATTN Protocol on Nostr",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "check": "tsc --noEmit",
