    "pino": "^10.1.0"
  },
  "peerDependencies": {
    "ws": "^8.18.0"
  },
  "peerDependenciesMeta": {
    "ws": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
