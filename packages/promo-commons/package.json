{
  "name": "@promo-protocol/commons",
  "version": "0.0.1",
  "description": "Shared utilities for promo protocol packages",
  "type": "module",
  "exports": {
    "./*": "./*.ts",
    "./*/*": "./*/*.ts"
  },
  "files": [
    "**/*.ts",
    "**/*.js",
    "!**/*.test.ts",
    "!**/*.test.js"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "@types/debug": "^4.1.12"
  },
  "dependencies": {
    "debug": "^4.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
