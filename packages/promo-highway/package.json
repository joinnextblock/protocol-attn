{
  "name": "@promo-protocol/highway",
  "description": "Highway service for The PROMO Protocol",
  "module": "src/index.ts",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "dvmcp",
    "promo-protocol",
    "promo",
    "protocol",
    "highway"
  ],
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./*": "./*.ts",
    "./*/*": "./*/*.ts"
  },
  "files": [
    "**/*.ts",
    "**/*.js",
    "!**/*.test.ts",
    "!**/*.test.js",
    "config.example.yml"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joinnextblock/promo-protocol.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "postbuild": "npm run docker:build && npm run docker:push",
    "docker:build": "docker build -t joinnextblock/promo-indexer:latest .",
    "docker:push": "docker push joinnextblock/promo-indexer:latest",
    "preview": "vite preview"
  },
  "dependencies": {
    "applesauce-core": "^0.12.1",
    "applesauce-loaders": "^0.12.0",
    "nostr-tools": "^2.12.0",
    "rx-nostr": "^3.6.1",
    "solid-js": "^1.9.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "vite": "^6.3.1",
    "vite-plugin-solid": "^2.11.6"
  }
}
