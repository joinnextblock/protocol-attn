{
  "name": "@promo-protocol/brokerage",
  "description": "Brokerage service for The PROMO Protocol",
  "type": "module",
  "private": true,
  "scripts": {
    "init": "cp config.example.yml config.brokerage.yml",
    "start": "bun run ./src/index.ts",
    "dev": "bun run --watch ./src/index.ts",
    "test": "bun test",
    "build": "bun build ./src/index.ts --outfile ./build/index.js",
    "compile": "bun build ./src/index.ts --compile --outfile ./bin/brokerage"
  },
  "dependencies": {
    "@dvmcp/commons": "^0.1.10",
    "nostr-tools": "^2.12.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.2",
    "typescript": "^5.8.3"
  }
}
